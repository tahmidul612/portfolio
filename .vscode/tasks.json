{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "hugo",
      "label": "hugo: Build site",
      "isBackground": true,
      "problemMatcher": {
        "owner": "hugo",
        "source": "watch",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],

        "pattern": [
          {
            "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Start building sites",
          "endsPattern": "^.*Total in"
        }
      }
    }
  ]
}
